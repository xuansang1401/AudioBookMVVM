<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_contain"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imv_video_notification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_title_video"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Bigcity Boiz"
            android:textColor="@color/white_50"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_owner_video"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:text="Binz"
            android:textColor="@color/white_50"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="50dp">

            <ImageView
                android:id="@+id/btn_back_notification"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/exo_controls_rewind" />

            <ImageView
                android:id="@+id/btn_play_notification"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:padding="2dp"
                android:src="@drawable/exo_controls_play" />

            <ImageView
                android:id="@+id/btn_next_notification"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:padding="4dp"
                android:src="@drawable/exo_controls_fastforward" />

            <ImageView
                android:id="@+id/btn_close_notification"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:padding="4dp"
                android:src="@drawable/baseline_close_white_36dp" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>